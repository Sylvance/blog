<div style="width: 50%; margin: 0 auto;">
  <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <%= link_to 'New Post', new_post_path, :style=>'color: green;' %>

  <br>
  <br>

  <% @posts.each do |post| %>
    <div>
      <div style="font-weight: bold; margin-bottom: 1rem;"><%= post.title %></div>
      <div style="margin-bottom: 0.5rem;"><%= post.body %></div>
      <div>
        <span><%= link_to '👁️', post %></span>
        <span><%= link_to '🖊', edit_post_path(post) %></span>
        <span><%= link_to '❌', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      </div>
      <hr/>
    </div>
  <% end %>
</div>
